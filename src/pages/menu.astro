		<style>
			/* Café Classic Theme */
			.cafe-texture {
				background-image: 
					linear-gradient(45deg, rgba(139, 69, 19, 0.03) 25%, transparent 25%),
					linear-gradient(-45deg, rgba(139, 69, 19, 0.03) 25%, transparent 25%),
					linear-gradient(45deg, transparent 75%, rgba(139, 69, 19, 0.03) 75%),
					linear-gradient(-45deg, transparent 75%, rgba(139, 69, 19, 0.03) 75%);
				background-size: 20px 20px;
				background-position: 0 0, 0 10px, 10px -10px, -10px 0px;
			}

			/* Animations */
			@keyframes fadeIn {
				from { opacity: 0; transform: translateY(-20px); }
				to { opacity: 1; transform: translateY(0); }
			}

			@keyframes slideUp {
				from { opacity: 0; transform: translateY(30px); }
				to { opacity: 1; transform: translateY(0); }
			}

			@keyframes scaleIn {
				from { opacity: 0; transform: scale(0.9); }
				to { opacity: 1; transform: scale(1); }
			}

			@keyframes steamRise {
				0% { transform: translateY(0) scale(1); opacity: 0.8; }
				50% { transform: translateY(-5px) scale(1.1); opacity: 0.5; }
				100% { transform: translateY(-10px) scale(1.2); opacity: 0; }
			}

			.animate-fade-in {
				animation: fadeIn 0.8s ease-out forwards;
			}

			.animate-slide-up {
				animation: slideUp 0.8s ease-out 0.2s forwards;
				opacity: 0;
			}

			/* Classic Border */
			.classic-border {
				position: relative;
				padding: 1rem;
				background: rgba(255, 248, 240, 0.9);
				border: 3px double #8B4513;
				border-radius: 8px;
				box-shadow: 0 4px 15px rgba(139, 69, 19, 0.2);
			}

			.classic-title {
				font-family: 'Georgia', 'Times New Roman', serif;
				letter-spacing: 2px;
				text-shadow: 2px 2px 4px rgba(139, 69, 19, 0.2);
			}

			/* Text Gradient Classic */
			.text-gradient-classic {
				background: linear-gradient(135deg, #8B4513 0%, #D2691E 50%, #A0522D 100%);
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				background-clip: text;
			}

			/* Menu Card Styles - Classic Café */
			.menu-item {
				animation: scaleIn 0.5s ease-out forwards;
				opacity: 0;
			}

			.menu-card {
				@apply rounded-xl overflow-hidden shadow-2xl;
				background: linear-gradient(to bottom, #FFF8F0 0%, #FAEBD7 100%);
				border: 3px solid #8B4513;
				border-bottom: 5px solid #654321;
				transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
				position: relative;
				box-shadow: 
					0 4px 6px rgba(139, 69, 19, 0.2),
					0 1px 3px rgba(139, 69, 19, 0.1),
					inset 0 1px 0 rgba(255, 255, 255, 0.5);
			}

			.menu-card::before {
				content: '';
				position: absolute;
				top: 0;
				left: 0;
				right: 0;
				bottom: 0;
				background: linear-gradient(135deg, rgba(210, 105, 30, 0.05) 0%, rgba(139, 69, 19, 0.05) 100%);
				opacity: 0;
				transition: opacity 0.4s ease;
				z-index: 0;
				pointer-events: none;
			}

			.menu-card:hover::before {
				opacity: 1;
			}

			.menu-card:hover {
				transform: translateY(-8px) rotate(-1deg);
				box-shadow: 
					0 12px 24px rgba(139, 69, 19, 0.3),
					0 8px 16px rgba(139, 69, 19, 0.2),
					inset 0 1px 0 rgba(255, 255, 255, 0.6);
				border-color: #A0522D;
			}

			.menu-image-container {
				position: relative;
				height: 180px;
				overflow: hidden;
				border-bottom: 2px solid #8B4513;
				background: #F5DEB3;
			}

			.menu-image {
				width: 100%;
				height: 100%;
				object-fit: cover;
				transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
				filter: sepia(0.15) contrast(1.05);
			}

			.menu-card:hover .menu-image {
				transform: scale(1.1);
				filter: sepia(0.2) contrast(1.1);
			}

			.menu-overlay {
				position: absolute;
				top: 0;
				left: 0;
				right: 0;
				bottom: 0;
				background: linear-gradient(to bottom, transparent 0%, rgba(139, 69, 19, 0.4) 100%);
				display: flex;
				align-items: flex-start;
				justify-content: flex-end;
				padding: 0.75rem;
			}

			.menu-badge {
				@apply px-3 py-1 text-xs font-bold;
				background: #8B4513;
				color: #FFF8F0;
				border: 2px solid #D2691E;
				border-radius: 4px;
				box-shadow: 0 2px 8px rgba(139, 69, 19, 0.6);
				animation: steamRise 3s ease-in-out infinite;
				font-family: 'Georgia', serif;
				letter-spacing: 0.5px;
			}

			.menu-content {
				padding: 1rem;
				position: relative;
				z-index: 1;
				background: rgba(255, 248, 240, 0.8);
			}

			.menu-title {
				@apply text-lg font-bold mb-2;
				color: #654321;
				font-family: 'Georgia', 'Times New Roman', serif;
				text-align: center;
				letter-spacing: 1px;
				text-shadow: 1px 1px 2px rgba(139, 69, 19, 0.2);
				border-bottom: 1px solid #D2691E;
				padding-bottom: 0.5rem;
			}

			.menu-description {
				@apply mb-3 text-xs leading-relaxed;
				color: #654321;
				font-family: 'Georgia', serif;
				text-align: center;
				font-style: italic;
			}

			.menu-ingredients {
				@apply mb-3 rounded-lg p-2;
				background: rgba(222, 184, 135, 0.3);
				border: 1px dashed #8B4513;
			}

			.ingredients-title {
				@apply font-semibold text-xs mb-1;
				color: #8B4513;
				font-family: 'Georgia', serif;
			}

			.ingredients-list {
				@apply text-xs space-y-0.5;
				color: #654321;
			}

			.ingredients-list li {
				@apply flex items-center;
			}

			.ingredients-list li::before {
				content: '◆';
				@apply mr-1.5 font-bold text-xs;
				color: #D2691E;
			}

			.menu-footer {
				@apply flex items-center justify-center pt-3;
				border-top: 2px double #8B4513;
				background: rgba(139, 69, 19, 0.05);
				margin: 0 -1rem -1rem -1rem;
				padding: 0.75rem 1rem;
			}

			.menu-price {
				@apply text-xl font-bold;
				color: #8B4513;
				font-family: 'Georgia', serif;
				text-shadow: 1px 1px 2px rgba(210, 105, 30, 0.3);
				letter-spacing: 1px;
			}

			/* Stagger animation for menu items */
			.menu-item {
				opacity: 0;
				animation: fadeIn 0.4s ease forwards;
			}

			.menu-item:nth-child(1) { animation-delay: 0.05s; }
			.menu-item:nth-child(2) { animation-delay: 0.1s; }
			.menu-item:nth-child(3) { animation-delay: 0.15s; }
			.menu-item:nth-child(4) { animation-delay: 0.2s; }
			.menu-item:nth-child(5) { animation-delay: 0.25s; }
			.menu-item:nth-child(6) { animation-delay: 0.3s; }
			.menu-item:nth-child(7) { animation-delay: 0.35s; }
			.menu-item:nth-child(8) { animation-delay: 0.4s; }

			@keyframes fadeIn {
				from {
					opacity: 0;
					transform: translateY(10px);
				}
				to {
					opacity: 1;
					transform: translateY(0);
				}
			}

			/* Mini Card Styles - Optimizado para móvil */
			.menu-card-overlay {
				@apply rounded-lg overflow-hidden relative;
				height: 180px;
				background-size: cover;
				background-position: center;
				border: 3px solid #8B4513;
				box-shadow: 0 2px 6px rgba(139, 69, 19, 0.4);
				transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
				cursor: pointer;
			}

			.menu-card-overlay:hover {
				box-shadow: 0 4px 12px rgba(139, 69, 19, 0.6);
				border-color: #D2691E;
			}

			.menu-card-overlay:active {
				transform: scale(0.97);
			}

			.menu-card-overlay::before {
				content: '';
				position: absolute;
				top: 0;
				left: 0;
				right: 0;
				bottom: 0;
				background: linear-gradient(
					to bottom,
					rgba(0, 0, 0, 0.1) 0%,
					rgba(139, 69, 19, 0.3) 50%,
					rgba(139, 69, 19, 0.7) 100%
				);
				z-index: 1;
				transition: background 0.3s ease;
			}

			.menu-card-overlay:hover::before {
				background: linear-gradient(
					to bottom,
					rgba(0, 0, 0, 0.2) 0%,
					rgba(139, 69, 19, 0.4) 50%,
					rgba(139, 69, 19, 0.8) 100%
				);
			}

			.menu-overlay-content {
				position: absolute;
				bottom: 0;
				left: 0;
				right: 0;
				padding: 0.75rem;
				z-index: 2;
				display: flex;
				flex-direction: column;
				gap: 0.5rem;
				transition: transform 0.3s ease, opacity 0.3s ease;
			}

			.menu-card-overlay.active .menu-overlay-content {
				transform: translateY(-10px);
				opacity: 0;
				pointer-events: none;
			}

			.menu-title-overlay {
				@apply text-base font-bold;
				color: #FFF8F0;
				font-family: 'Georgia', serif;
				text-shadow: 
					1px 1px 3px rgba(0, 0, 0, 0.8),
					0 0 10px rgba(139, 69, 19, 0.5);
				line-height: 1.2;
			}

			.menu-price-overlay {
				@apply inline-block px-3 py-1 text-sm font-bold rounded-full;
				background: rgba(255, 248, 240, 0.95);
				color: #8B4513;
				font-family: 'Georgia', serif;
				border: 2px solid #D2691E;
				box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
				backdrop-filter: blur(4px);
				align-self: flex-start;
			}

			/* Ingredients Panel - Efecto Flip */
			.ingredients-panel {
				position: absolute;
				top: 0;
				left: 0;
				right: 0;
				bottom: 0;
				background: linear-gradient(135deg, rgba(255, 248, 240, 0.98) 0%, rgba(250, 235, 215, 0.98) 100%);
				backdrop-filter: blur(10px);
				z-index: 3;
				padding: 1rem;
				display: flex;
				flex-direction: column;
				opacity: 0;
				transform: rotateY(90deg) scale(0.8);
				pointer-events: none;
				transition: all 0.5s cubic-bezier(0.68, -0.55, 0.265, 1.55);
				overflow-y: auto;
			}

			.menu-card-overlay.active .ingredients-panel {
				opacity: 1;
				transform: rotateY(0deg) scale(1);
				pointer-events: all;
			}

			.ingredients-header {
				display: flex;
				justify-content: space-between;
				align-items: center;
				margin-bottom: 0.75rem;
				padding-bottom: 0.5rem;
				border-bottom: 2px solid #D2691E;
			}

			.ingredients-header h4 {
				font-family: 'Georgia', serif;
				font-size: 1rem;
				font-weight: bold;
				color: #8B4513;
				margin: 0;
			}

			.close-btn {
				background: #D2691E;
				color: white;
				border: none;
				width: 24px;
				height: 24px;
				border-radius: 50%;
				font-size: 1.25rem;
				line-height: 1;
				cursor: pointer;
				transition: all 0.2s ease;
				display: flex;
				align-items: center;
				justify-content: center;
				box-shadow: 0 2px 4px rgba(139, 69, 19, 0.3);
			}

			.close-btn:hover {
				background: #8B4513;
				transform: rotate(90deg);
			}

			.close-btn:active {
				transform: rotate(90deg) scale(0.9);
			}

			.ingredients-items {
				list-style: none;
				padding: 0;
				margin: 0;
				display: flex;
				flex-direction: column;
				gap: 0.5rem;
				overflow-y: auto;
